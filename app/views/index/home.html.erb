<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Your Post Feed </h3>
			<%= render 'shared/feed' %>
		</div>
	</div>

<% else %>
	<div class="center hero-unit">
		<h1>Twitter Mock</h1>
		<h2> This is the home page for the Twitter Mockup</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("mock.png", alt: "Mock"), '#' %>
<% end %>

